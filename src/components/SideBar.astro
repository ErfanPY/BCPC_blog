---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<div class="drawer-side z-40 customTransform lg:col-start-2">
  <label for="my-drawer" class="drawer-overlay col-start-1 col-end-3"></label>
  <aside class="px-2 pt-2 col-start-2 h-auto min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col">
    <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    <SideBarFooter />
  </aside>
</div
